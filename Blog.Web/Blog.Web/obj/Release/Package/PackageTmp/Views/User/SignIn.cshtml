@model Blog.Web.Models.User.UserDataModel
@{
    ViewBag.Title = "Sign In";
}
<h2>SignIn</h2>

@TempData["message"]
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <form action="SignIn" method="post">
        <div class="form-group">
            <label class="control-label col-md-2" for="exampleInputEmail1">Email address</label>
            @Html.EditorFor(model => model.Email)
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="exampleInputPassword1">Password</label>
            @Html.EditorFor(model => model.Password)
        </div>
        <button type="submit" class="btn">Sign in</button>
    </form>
</div>
}
<br />
<button class="btn">
    @Html.ActionLink("Forgot password", "ForgotPassword", "User")
</button>