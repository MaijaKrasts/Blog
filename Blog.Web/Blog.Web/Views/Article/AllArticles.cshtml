@model List<Blog.Data.Entities.Article>
@{
     ViewBag.Title = "AllArticles";
}

<h1 class="my-4">
    All articles
</h1>

<div class="row">
    @foreach (var article in Model)
    {
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@article.Picture" alt="">
                <div class="card-body">
                    <h4 class="card-title">
                        @article.Title
                    </h4>
                    <p class="card-text">@article.Intro</p>
                    <a>@Html.ActionLink("Read more", "Single", "Article", new { articleId = article.Id, userId = Session["userId"] })</a>                </div>
            </div>
        </div>

    }
</div>