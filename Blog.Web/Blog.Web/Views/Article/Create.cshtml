@model Blog.Web.Models.Article.ArticleModel
@{
    ViewBag.Title = "Create";
}

<h1>Create new article</h1>
<h5 class="text-danger">@Html.ValidationSummary()</h5>

<form class="form-horizontal" action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Picture upload</label>
        <div class="col-sm-10">
            <input asp-for="UpdatedPicture" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Intro</label>
        <div class="col-sm-10">
            <textarea asp-for="Intro" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Text</label>
        <div class="col-sm-10">
            <textarea asp-for="Text" class="form-control"></textarea>
        </div>
    </div>
    <div class="form col-sm-10">
        <input asp-for="AuthorId" type="hidden" class="form-control" value="@Session["userId"]">
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-light" vaue="Save" />
        </div>
    </div>
</form>
