        $('#buttonWrite').click(function (e) {
            e.preventDefault()
            var email = $('#emailWrite').val();
            $.ajax({
                type: 'GET',
                url: '/admin/write/' + email,
                success: function (result) {
                $('#result1').html(result);
                }
            });
            location.reload();
        });

        $('#buttonComment').click(function (e) {
            e.preventDefault()
            var email = $('#emailComment').val();
            $.ajax({
                type: 'GET',
                url: '/admin/comment/' + email,
                success: function (result) {
                    $('#result1').html(result);
                }
            });
            location.reload();
        });

        $('#buttonRate').click(function (e) {
            e.preventDefault()
            var email = $('#emailRate').val();
            $.ajax({
                type: 'GET',
                url: '/admin/rate/' + email,
                success: function (result) {
                    $('#result1').html(result);
                }
            });
            location.reload();
        });
    });
</script>



